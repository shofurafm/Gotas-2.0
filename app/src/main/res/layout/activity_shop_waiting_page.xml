<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TasShop.ShopWaitingPage">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="650dp"
        android:layout_marginTop="-0dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:src="@color/lightGrey"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="650dp"
        android:padding="20dp"
        android:layout_marginTop="-0dp">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_arrow_back_orange" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:src="@drawable/confirmbox2_bg"/>

        <RelativeLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/fromAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Lokasi anda"
                android:textColor="@color/Grey"
                android:textSize="13sp"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/galvji_bold"/>

            <TextView
                android:id="@+id/fromAddressDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fromAddress"
                android:text="Jl. Cieunteung no. 3"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/galvji_bold"/>

            <ImageView
                android:id="@+id/strip"
                android:layout_width="215dp"
                android:layout_height="3dp"
                android:layout_below="@id/fromAddressDesc"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:src="@color/Grey"/>

            <TextView
                android:id="@+id/toAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/strip"
                android:text="Lokasi anda"
                android:textColor="@color/Grey"
                android:textSize="13sp"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/galvji_bold"/>

            <TextView
                android:id="@+id/toAddressDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/toAddress"
                android:text="Jl. Cieunteung no. 3"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/galvji_bold"/>

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-0dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="550dp"
            android:src="@drawable/confirmbox_bg"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="550dp">

            <ImageView
                android:id="@+id/driverImg"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginLeft="95dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/round_btn"/>

            <TextView
                android:id="@+id/driverName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/driverImg"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="10dp"
                android:text="Rengga oncom"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:fontFamily="@font/galvji_bold"/>

            <TextView
                android:id="@+id/driverType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/driverImg"
                android:layout_below="@+id/driverName"
                android:layout_marginLeft="10dp"
                android:text="Driver Car"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"
                android:fontFamily="@font/galvji"/>

            <TextView
                android:id="@+id/driverPlat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/driverImg"
                android:layout_below="@+id/driverType"
                android:layout_marginLeft="10dp"
                android:text="Avanza (Z 1234 AB)"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"
                android:fontFamily="@font/galvji"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="90dp">

                <Button
                    android:id="@+id/callDriver"
                    android:layout_width="130dp"
                    android:layout_height="50dp"
                    android:text="Telfon driver"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:backgroundTint="@color/newOrange"
                    android:fontFamily="@font/galvji_bold"/>

                <Button
                    android:id="@+id/chatDriver"
                    android:layout_width="130dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_toRightOf="@+id/callDriver"
                    android:layout_marginLeft="15dp"
                    android:text="Chat driver"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:backgroundTint="@color/newOrange"
                    android:fontFamily="@font/galvji_bold"/>
            </RelativeLayout>


        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp"
        android:layout_marginTop="670dp">

        <Button
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:text="Driver Sedang dalam perjalanan"
            android:textColor="@color/white"
            android:backgroundTint="@color/darkGrey"
            android:fontFamily="@font/galvji_bold"/>
    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Profile">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginTop="-0dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_navigate_before_24" />

        <ImageView
            android:id="@+id/homebtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_navigate_next_24" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp">

        <ImageView
            android:id="@+id/profilePicture"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:src="@color/Grey"/>

        <Button
            android:id="@+id/chgProfilePict"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:text="Ubah Profile"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/galvji_bold"
            android:layout_below="@+id/profilePicture"
            android:textSize="10sp"
            android:textColor="@color/newOrange"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="310dp">

        <TextView
            android:id="@+id/nameUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:fontFamily="@font/galvji_bold"
            android:text="Shofura Fitiyah"/>

        <TextView
            android:id="@+id/phoneUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:fontFamily="@font/galvji"
            android:layout_below="@+id/nameUser"
            android:text="082112345678"/>

        <TextView
            android:id="@+id/emailUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:fontFamily="@font/galvji"
            android:layout_below="@+id/phoneUser"
            android:text="shofura.muthaharikah@gotas.com"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp">

        <Button
            android:id="@+id/option1"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:text="Pesanan Saya"
            android:backgroundTint="@color/newOrange"
            android:fontFamily="@font/galvji_bold"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/option2"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/option1"
            android:text="Bantuan"
            android:backgroundTint="@color/newOrange"
            android:fontFamily="@font/galvji_bold"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/option3"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/option2"
            android:text="Kebijakan Privasi"
            android:backgroundTint="@color/newOrange"
            android:fontFamily="@font/galvji_bold"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/option4"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/option3"
            android:text="Ketentuan Layanan"
            android:backgroundTint="@color/newOrange"
            android:fontFamily="@font/galvji_bold"
            android:textColor="@color/white"/>
    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
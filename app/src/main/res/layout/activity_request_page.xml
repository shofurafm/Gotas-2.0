<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TasShop.ShopRequest">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:layout_marginTop="-0dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:src="@color/lightGrey"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:padding="20dp"
        android:layout_marginTop="-0dp">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_arrow_back_orange" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-0dp">

        <ImageView
            android:id="@+id/chgProfilePict"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="340dp"
            android:src="@drawable/confirmbox_bg"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/fromAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="368dp"
                android:layout_marginLeft="70dp"
                android:text="Lokasi anda"
                android:textColor="@color/Grey"
                android:textSize="13sp"
                android:fontFamily="@font/galvji_bold"/>

            <TextView
                android:id="@+id/fromAddressDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_below="@id/fromAddress"
                android:text="Jl. Cieunteung no. 3"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"
                android:fontFamily="@font/galvji_bold"/>

            <ImageView
                android:id="@+id/strip"
                android:layout_width="215dp"
                android:layout_height="3dp"
                android:layout_below="@id/fromAddressDesc"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="70dp"
                android:src="@color/Grey"/>

            <TextView
                android:id="@+id/toAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_below="@+id/strip"
                android:text="Lokasi anda"
                android:textColor="@color/Grey"
                android:textSize="13sp"
                android:fontFamily="@font/galvji_bold"/>

            <TextView
                android:id="@+id/toAddressDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_below="@id/toAddress"
                android:text="Jl. Cieunteung no. 3"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"
                android:fontFamily="@font/galvji_bold"/>

            <Button
                android:id="@+id/editAddress"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginTop="390dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/strip"
                android:text="Edit"
                android:textSize="10sp"
                android:textColor="@color/newOrange"
                android:fontFamily="@font/galvji_bold"
                android:backgroundTint="@color/transparent"/>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp"
        android:layout_marginTop="480dp">

        <ImageView
            android:id="@+id/distance"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="120dp"
            android:src="@drawable/icon_tas_shop"/>

        <ImageView
            android:id="@+id/time"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@+id/distance"
            android:src="@drawable/icon_tas_shop"/>

        <TextView
            android:id="@+id/distanceTxt"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_below="@+id/distance"
            android:text="1,7 km"
            android:textSize="15sp"
            android:fontFamily="@font/galvji_bold"
            android:textAlignment="center"
            android:gravity="center_horizontal"/>

        <TextView
            android:id="@+id/timeTxt"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@+id/distanceTxt"
            android:layout_below="@+id/time"
            android:text="15min"
            android:textSize="15sp"
            android:fontFamily="@font/galvji_bold"
            android:textAlignment="center"
            android:gravity="center_horizontal" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:src="@color/Grey"
            android:layout_below="@id/distanceTxt"
            android:layout_marginTop="15dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="115dp">

            <ImageView
                android:id="@+id/paymentIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_baseline_payment_24"/>

            <TextView
                android:id="@+id/kindOfPayment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/paymentIcon"
                android:layout_marginLeft="10dp"
                android:text="Tunai"
                android:textSize="22sp"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/galvji_bold"/>

            <TextView
                android:id="@+id/totalPayment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/paymentIcon"
                android:layout_below="@+id/kindOfPayment"
                android:layout_marginLeft="10dp"
                android:text="Rp 7.800"
                android:textSize="18sp"
                android:textColor="@color/darkOrange"
                android:fontFamily="@font/galvji_bold"/>

            <Button
                android:id="@+id/paymentMethodBtn"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:text="Pilih metode pembayaran"
                android:textSize="10sp"
                android:backgroundTint="@color/newOrange"
                android:fontFamily="@font/galvji_bold"/>

        </RelativeLayout>

        <Button
            android:id="@+id/orderBtn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="185dp"
            android:layout_centerHorizontal="true"
            android:text="Pesan Tasshop"
            android:backgroundTint="@color/newOrange"
            android:fontFamily="@font/galvji_bold"/>
    </RelativeLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>